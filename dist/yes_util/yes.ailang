// yes.ailang - Repeat string until killed
// Default: outputs "y" forever

Function.WriteStdout {
    Input: str: Address
    Input: len: Integer
    Body: {
        SystemCall(1, 1, str, len)
    }
}

SubRoutine.Main {
    // Output "y\n" forever
    y_string = "y\n"
    
    WhileLoop 1 {
        WriteStdout(y_string, 2)
    }
}

RunTask(Main)